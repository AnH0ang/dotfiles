[core]
    pager = delta
    excludesfile = ~/.config/git/gitignore

[include]
    path = aliases
    path = user

[init]
    defaultBranch = main

[commit]
    verbose = true

[rerere]
    enabled = true
    autoupdate = true

[branch]
    autosetuprebase = always
    sort = -committerdate

[log]
    date = relative # show relative date
    follow = true   # follow file renames

[merge]
    autoStash = true
    conflictstyle = diff3

[pretty]
    stash = format:%C(bold magenta)%gd %C(blue)%>(13,trunc)%ad %C(reset)%s

[pull]
    ff = true
    rebase = true

[push]
    autoSetupRemote = true
    followTags = true
    default = simple

[rebase]
    autoStash = true

[interactive]
    diffFilter = delta --color-only

[fetch]
    prune = true
    pruneTags = true
    all = true

[diff]
    algorithm = histogram
    colorMoved = plain
    mnemonicPrefix = true
    renames = true

[help]
    autocorrect = prompt

[delta]
    navigate = true    # use n and N to move between diff sections
    side-by-side = true
    light = false
    features = catppuccin-macchiato

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
